{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": true,
		"allowJs": false,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
